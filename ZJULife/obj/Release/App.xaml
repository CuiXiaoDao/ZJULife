<Application
    x:Class="ZJULife.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZJULife">
    
    <Application.Resources>
        <SolidColorBrush x:Key="MyWhite" Color="#ecf0f1" />
        <SolidColorBrush x:Key="MyGreen" Color="#85b935" />
        <SolidColorBrush x:Key="MyGreen_x" Color="#7bf204" />        
        <SolidColorBrush x:Key="MyDark" Color="#1E1E1E" />
        <SolidColorBrush x:Key="MyYellow" Color="#f27b04" />
        <SolidColorBrush x:Key="MyGray" Color="#868484" />
        
        <Style TargetType="TextBlock" x:Key="MyTextBlockStyle">
            <Setter Property="Foreground" Value="{ThemeResource MyYellow}" />
            <Setter Property="FontFamily" Value="微软雅黑" />
            <Setter Property="FontSize" Value="24" />
        </Style>
        
        <Style TargetType="TextBlock" x:Key="MyHelpTextStyle">
            <Setter Property="Foreground" Value="{ThemeResource MyWhite}" />
            <Setter Property="FontFamily" Value="微软雅黑" />
            <Setter Property="FontWeight" Value="ExtraLight" />            
            <Setter Property="FontSize" Value="20" />
        </Style>
        
        <Style TargetType="ListView" x:Key="MyListViewStyle">
            <Setter Property="IsItemClickEnabled" Value="True" />
            <Setter Property="Margin" Value="12,25,18,0"/>
            <Setter Property="ContinuumNavigationTransitionInfo.ExitElementContainer" Value="True" />
        </Style>
        

        
    </Application.Resources>
</Application>


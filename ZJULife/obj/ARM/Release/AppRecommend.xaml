<Page
    x:Class="ZJULife.AppRecommend"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZJULife"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource MyDark}">

    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <ContinuumNavigationTransitionInfo/>
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid x:Name="LayoutRoot">
        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <Grid Background="{ThemeResource MyGreen}">
            <Viewbox HorizontalAlignment="Left">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,10,24,10" FontSize="48" FontFamily="微软雅黑" 
                        Foreground="{StaticResource MyWhite}" TextAlignment="Left" Text="APP推荐" />
            </Viewbox>

        </Grid>
        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="12,10,12,0">
                <HyperlinkButton Margin="0,6,0,6"
                NavigateUri="ms-windows-store:navigate?appid=a844ea06-fcc5-4c59-809f-43f7184924d3">
                    <ContentControl>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="ms-appx:///Assets/AppRecommend/ZJUWiFi.png"/>
                            <TextBlock Grid.Column="1" Margin="10,0,0,0" Style="{ThemeResource MyHelpTextStyle}" 
                                   FontSize="16" TextWrapping="Wrap">
                               ZJUWiFi是ZJUWLAN一键、自动登录工具。将一键登录固定到桌面磁贴,实现真正的一键登录,甚至不会打开程序。
                            </TextBlock>
                        </Grid>
                    </ContentControl>
                </HyperlinkButton>

                <HyperlinkButton Margin="0,6,0,6"
                NavigateUri="ms-windows-store:navigate?appid=cf508ccd-4fde-4ca1-9b93-72844c6d7dc8">
                    <ContentControl>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="ms-appx:///Assets/AppRecommend/QiuShiChao.png"/>
                            <TextBlock Grid.Column="1" Margin="10,0,0,0" Style="{ThemeResource MyHelpTextStyle}" 
                                   FontSize="16" TextWrapping="Wrap">
                               求是潮手机站,是浙江大学求是潮的新一代移动客户端,提供课表/活动/成绩/考试/校车等方便学生的查询。目前是beta0.5版,所以只提供课表/活动/功能。
                            </TextBlock>
                        </Grid>
                    </ContentControl>
                </HyperlinkButton>

                <TextBlock Grid.Column="1" Margin="12,0,0,12" Style="{ThemeResource MyHelpTextStyle}"
                       FontWeight="SemiBold" TextWrapping="Wrap">More beautiful app...
                </TextBlock>

                <HyperlinkButton Margin="0,6,0,6"
                NavigateUri="ms-windows-store:navigate?appid=e21e7ce7-e536-4788-86c1-b6f72625ce2b">
                    <ContentControl>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="ms-appx:///Assets/AppRecommend/OneDo.png"/>
                            <TextBlock Grid.Column="1" Margin="10,0,0,0" Style="{ThemeResource MyHelpTextStyle}" 
                                   FontSize="16" TextWrapping="Wrap">
                               OneDo是由捷克开发者开发的任务计划app,简单易用,设计优雅。支持备份、恢复,支持动态透明磁贴。
                            </TextBlock>
                        </Grid>
                    </ContentControl>
                </HyperlinkButton>

                <HyperlinkButton Margin="0,6,0,6"
                NavigateUri="ms-windows-store:navigate?appid=fd381b25-3475-4102-9599-817ced2f815b">
                    <ContentControl>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="ms-appx:///Assets/AppRecommend/PicsArt.png"/>
                            <TextBlock Grid.Column="1" Margin="10,0,0,0" Style="{ThemeResource MyHelpTextStyle}" 
                                   FontSize="16" TextWrapping="Wrap">
                               PicsArt摄影工作室是最流行的免费手机照片编辑器和增长最快的照片艺术家的社交网络之一,作品最大的画廊,让每个人都成为一个伟大的艺术家！
                            </TextBlock>
                        </Grid>
                    </ContentControl>
                </HyperlinkButton>

                <HyperlinkButton Margin="0,6,0,6"
                NavigateUri="ms-windows-store:navigate?appid=26cad058-fc9a-4967-95f0-4e83c09de99e">
                    <ContentControl>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="ms-appx:///Assets/AppRecommend/Realarm.png"/>
                            <TextBlock Grid.Column="1" Margin="10,0,0,0" Style="{ThemeResource MyHelpTextStyle}" 
                                   FontSize="16" TextWrapping="Wrap">
                               Realarm即悦尔闹钟,与OneDo系同一开发者计划app,该应用简洁大方,功能全面,设计精美支持通过小娜发出语音指令进行操控。
                            </TextBlock>
                        </Grid>
                    </ContentControl>
                </HyperlinkButton>
                
                <HyperlinkButton Margin="0,6,0,6"
                NavigateUri="ms-windows-store:navigate?appid=8dcee3d6-6043-4b22-b1ee-9fe7f90b4b63">
                    <ContentControl>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="ms-appx:///Assets/AppRecommend/XodoDocs.png"/>
                            <TextBlock Grid.Column="1" Margin="10,0,0,0" Style="{ThemeResource MyHelpTextStyle}" 
                                   FontSize="16" TextWrapping="Wrap">
                               Xodo Docs是一款优秀的PDF阅读器，无广告、内购，可直接添加下划线、高亮、笔记等。
                            </TextBlock>
                        </Grid>
                    </ContentControl>
                </HyperlinkButton>
                
                <HyperlinkButton Margin="0,6,0,6"
                NavigateUri="ms-windows-store:navigate?appid=5681f21c-f257-4d62-83f5-5341788a5077">
                    <ContentControl>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <Image Source="ms-appx:///Assets/AppRecommend/OfficeLens.png"/>
                            <TextBlock Grid.Column="1" Margin="10,0,0,0" Style="{ThemeResource MyHelpTextStyle}" 
                                   FontSize="16" TextWrapping="Wrap">
                               Office Lens 可以剪裁及强化处理白板、黑板和文档的图片，还能识别其中的文字，并将它们保存到 OneNote。
                            </TextBlock>
                        </Grid>
                    </ContentControl>
                </HyperlinkButton>
                
                <TextBlock Grid.Column="1" Margin="12,0,0,12" Style="{ThemeResource MyHelpTextStyle}"
                       FontWeight="Normal" TextWrapping="Wrap">可能需要的其他APP...
                </TextBlock>

                <TextBlock Grid.Column="1" Margin="12,0,0,12" Style="{ThemeResource MyHelpTextStyle}"
                       TextWrapping="Wrap">翻译，Lockie,Moliplayer,闪电锁屏，TeamViewer...
                </TextBlock>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

